<!-- ========== HEADER ========== -->
<header class="header main-header header-style-2" id="circular-particles">
  <div class="primary-trans-bg">
    <div class="container">
      <div class="outer">
        <div class="inner text-center">
          <h1 class="white-color">
            Protecting Everyone from
            <br/>Account Takeover
          </h1>
          <h5 class="">Deauthorized is a FIDO Approved U2F and UAF product that helps businesses prevent account takeover with decentralized, secure, biometric authentication.
          </h5>
        </div>
      </div>
    </div>
  </div>
</header>
<section class="se-section features-section">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-12 se-feature">
        <i class="icon ion-radio-waves"></i>
        <h5>Eliminate Fraud</h5>
        <p>
          Our system uses biometric authenitcation so only verified customers can login or authorize transactions.
        </p>
      </div>
      <div class="col-md-4 col-sm-12 se-feature">
        <i class="icon ion-ios-paper-outline"></i>
        <h5>Reduce Data Breaches
        </h5>
        <p>Removing user credentials from your application database leaves nothing for hackers to steal.</p>
      </div>
      <div class="col-md-4 col-sm-12 se-feature">
        <i class="icon ion-ios-lightbulb-outline"></i>
        <h5>Enhance User Experience</h5>
        <p>Login or register with passwordless authentication using TouchId or FaceId.</p>
      </div>
    </div>
  </div>
</section>

<!-- ========== STEPS ========== -->
<section class="se-section se-steps">
  <div class="container">
    <div class="row text-center">
      <h3 class="underline mtn">It's as easy as 1 - 2 - 3!</h3>
      <div class="row">
        <div class="col-md-6 text-center">
          <%= image_tag('da-mobile-app.png', size: '275x550') %>
        </div>
        <div class="col-md-6 text-center">

          <div class="">
            <div class="row">
              <div class="">
                <div class="da-box">
                  <div class="branding-box text-center">
                    <div class="branding"></div>
                  </div>
                  <div class="smooth-box text-center">
                    <div class="qr-code"></div>
                    <a class="btn btn-lg btn-brand">Enter</a>

                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-4 col-sm-4 one-step">
        <h4>Download Our Mobile App</h4>
        <p>Download our mobile application to create your account.
        </p>
      </div>

      <div class="col-md-4 col-sm-4 one-step">
        <h4>Sign Up for an Account
        </h4>
        <p>Use the mobile app to authenticate via a single sign-on, biometric authenticator.
        </p>
      </div>

      <div class="col-md-4 col-sm-4 one-step">
        <h4>Connect with Your Services</h4>
        <p>Integrate your online financial accounts, email accounts, mobile providers, and more.</p>
      </div>
    </div>
  </div>
</section>

<!-- ========== CTA SECTION ========== -->
<section class="se-section primary-bg">
  <div class="container">
    <div class="row text-center">
      <h3>Sign up for a limited beta!</h3>
      <p>The first 10 users in the beta will receive our service free forever.</p>
      <%= link_to "SIGN UP", beta_invite_path, class: "btn se-btn-black btn-rounded" %>
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</section>