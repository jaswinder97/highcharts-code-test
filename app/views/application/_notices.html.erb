<% flash.each do |key, value| %>
  <%= content_tag :div, class: "alert alert-#{key == 'error' ? 'danger' : key == 'notice' ? 'success' : key}" do %>
    <%= value %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <% end %>
        <% end %>