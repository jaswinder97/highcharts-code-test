        <li class="grey">
          <%= link_to 'Sign Up', new_users_subscription_path(plan_id: "premium"), class: "btn btn-primary" %>
        </li>
      </ul>
    </div>

    <div class="col-md-4">
      <ul class="price">
        <li class="header">Enterprize</li>
        <li class="grey">$100.0 / 3 Months</li>
        <li>50GB Storage</li>
        <li>50 Emails</li>
        <li>50 Domains</li>
        <li>5GB Bandwidth</li>
        <li class="grey">
          <%= link_to 'Sign Up', new_users_subscription_path(plan_id: "enterpize"), class: "btn btn-primary" %>
        </li>
      </ul>
    </div>
  </div>
