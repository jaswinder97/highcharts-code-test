<h4>OpenID Client Applications</h4>
<div class="row">
  <div class="col-md-9">
    <h6>List of apps:</h6>
  </div>
  <div class="col-md-3">
    <%= link_to 'Add a New Application', new_app_path, class: "btn btn-lg btn-primary float-right" %>
  </div>
</div>
<br>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>App Name </th>
      <th>Callback URL</th>
      <th>Platform</th>
      <th colspan="2">Actions</th>
      <!-- <th colspan="3">Deploy Samples</th> -->
    </tr>
  </thead>
  <tbody>
    <%= render partial: "app", collection: @apps %>
  </tbody>
</table>