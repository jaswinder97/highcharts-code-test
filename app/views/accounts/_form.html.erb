<%= form_for(@account, local: true) do |form| %>

  <% if account.errors.any? %>
    <div class="error_explanation">
      <ul>
        <% account.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <h4>Change your Account Name </h4>

      <div class="form-group t-60">
        <%= form.label :subdomain, "App subdomain" %>
          <%= form.text_field :subdomain, class: "form-control", placeholder: "Subdomain" %>
      </div>

      <div class="form-group">
        <%= form.submit class: "btn btn-lg btn-primary" %>
      </div>
      <% end %>